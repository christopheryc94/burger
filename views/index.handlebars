<div class="container">
    <div class='row'>
        <div class="col-md-12">
            <img src='/assets/img/burger.png' id="logo">
            <br>
            <h1 id="title">Eat-Da-Burger!</h1>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-4 added-burgers">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4 devoured-burgers">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>{{burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6">
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="burger" burger_name="burger_name">
                </div>

                <button type="submit">Add burger</button>
                <h6>Enter a burger you want to eat. Click the "Add burger" button.</h6>
            </form>
        </div>
    </div>
</div>
